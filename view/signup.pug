doctype 
html 
    head 
        title Blog Signup
    body 
        form(action="/" method="post") 
            div
                label(for='name') Name:
                input(name="name")  
            br
            div
                label(for="mailid") E-Mail:
                input(type="email" name="mailid" required placeholder="E-mail")
            br  
            div
                label(for="ph") Phone:
                input(type="tel", name="ph" required placeholder="00-0000000000")
            br
            div
                label(for="password") Password:
                input(type="password" name="password" required placeholder="password") 
            br
            button(type="submit") Signup
