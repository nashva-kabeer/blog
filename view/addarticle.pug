doctype
html 
    head 
        title Add Article 
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css')
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js')
    body 
        link(rel="stylesheet", href="/add.css")
    body
        .container.text-center 
            h2 New Article 
        form(action="/article/addarticle", method="post")  
            div
                label(for='title') Title:
                input#title(type="text" name="title")  
            br
            div
                label(for='subject') Topic:
                select#subject(name="subject")
                    option(value="") Please select 
                    each opt in data1 
                        option(value=`${opt._id}`) #{opt.subject}    
            br
            div
                label(for='description') Description:
                input#description(type="text" name="description")  
            br
            div
                label(for='article') Article:
                textarea#article(name="article", cols="30", rows="10")   
            br
            input(type="Submit", value="Add Article")
            h6 #{message}